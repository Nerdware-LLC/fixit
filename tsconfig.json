{
  "include": ["src/**/*"],
  "ts-node": {
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "require": ["tsconfig-paths/register"]
  },

  "compilerOptions": {
    // Language and Environment:
    "target": "ES2022",
    "lib": ["ES2022"],

    // Modules:
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@events": ["src/events"],
      "@events/*": ["src/events/*"],
      "@graphql": ["src/graphql"],
      "@graphql/*": ["src/graphql/*"],
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"],
      "@middleware": ["src/middleware"],
      "@middleware/*": ["src/middleware/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@server": ["src/server"],
      "@server/*": ["src/server/*"],
      "@tests/*": ["src/__tests__/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    },

    // "Completeness" Configs:
    "skipLibCheck": false,

    // Emit Configs:
    "outDir": "./build",
    "removeComments": true,
    // "sourceMap": true,

    // Output Formatting:
    "noErrorTruncation": true,

    // Interop Constraints:
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Type Checking:
    "noImplicitAny": true,
    "strict": true
  }
}
