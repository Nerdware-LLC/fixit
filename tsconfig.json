{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@events": ["src/events"],
      "@events/*": ["src/events/*"],
      "@graphql": ["src/graphql"],
      "@graphql/*": ["src/graphql/*"],
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"],
      "@middleware": ["src/middleware"],
      "@middleware/*": ["src/middleware/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@server": ["src/server"],
      "@server/*": ["src/server/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [".*/**/*", "node_modules/**/*", "build/**/*"],
  "ts-node": {
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "require": ["tsconfig-paths/register"]
  }
}
