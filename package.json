{
  "name": "fixit",
  "version": "0.0.0",
  "description": "Simplify Work Orders, Invoices, and Payments",
  "author": {
    "name": "Trevor Anderson",
    "email": "Trevor@Nerdware.cloud"
  },
  "license": "LicenseRef-LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nerdware-LLC/fixit.git"
  },
  "private": true,
  "homepage": "https://github.com/Nerdware-LLC/fixit#readme",
  "bugs": {
    "url": "https://github.com/Nerdware-LLC/fixit/issues"
  },
  "engines": {
    "node": ">=20.17.0"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "libs/*",
    "libs/api-schemas/*",
    "tools/*"
  ],
  "scripts": {
    "eslint-inspector:start": "npx @eslint/config-inspector@latest",
    "fixit-api:start": "docker compose up --abort-on-container-exit",
    "schema:open-api:validate": "redocly lint --config libs/api-schemas/OpenAPI/redocly.yaml",
    "schema:open-api:codegen": "ts-node libs/api-schemas/OpenAPI/scripts/codegenOpenApiSchemaTypes.js",
    "schema:graphql:validate": "ts-node libs/api-schemas/GraphQL/scripts/validateGqlSchema.js",
    "schema:graphql:codegen": "graphql-codegen-esm --config libs/api-schemas/GraphQL/codegen.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@aws-sdk/client-dynamodb": "^3.648.0",
    "@aws-sdk/client-lambda": "^3.645.0",
    "@aws-sdk/client-pinpoint": "^3.645.0",
    "@aws-sdk/lib-dynamodb": "^3.648.0",
    "@graphql-tools/schema": "^10.0.6",
    "@graphql-tools/utils": "^10.5.4",
    "@nerdware/ddb-single-table": "^2.7.3",
    "@nerdware/ts-string-helpers": "^1.7.1",
    "@nerdware/ts-type-safety-utils": "^1.0.15",
    "@sentry/node": "^7.119.0",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "expo-server-sdk": "^3.11.0",
    "express": "^4.20.0",
    "google-auth-library": "^9.14.1",
    "graphql": "^16.9.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^10.17.0",
    "uuid": "^10.0.0",
    "yup": "^1.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@apollo/rover": "^0.25.0",
    "@eslint/js": "^9.9.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/introspection": "^4.0.3",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@graphql-tools/merge": "^9.0.7",
    "@graphql-tools/mock": "^9.0.4",
    "@nx-tools/nx-container": "^6.0.2",
    "@nx/esbuild": "19.7.2",
    "@nx/eslint": "19.7.2",
    "@nx/eslint-plugin": "19.7.2",
    "@nx/js": "19.7.2",
    "@nx/node": "19.7.2",
    "@nx/vite": "19.7.2",
    "@nx/web": "19.7.2",
    "@redocly/cli": "^1.24.0",
    "@serverless-guru/prettier-plugin-import-order": "^0.4.2",
    "@stylistic/eslint-plugin": "^2.8.0",
    "@stylistic/eslint-plugin-migrate": "^2.8.0",
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.24",
    "@swc/helpers": "^0.5.13",
    "@types/bcrypt": "^5.0.2",
    "@types/command-line-args": "^5.2.3",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "aws-sdk-client-mock": "^4.0.1",
    "command-line-args": "^6.0.0",
    "esbuild": "^0.19.12",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import-x": "^3.1.0",
    "eslint-plugin-n": "^17.10.2",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.9.0",
    "nodemon": "^3.1.4",
    "nx": "19.7.2",
    "openapi-typescript": "^7.4.0",
    "pnpm": "^9.10.0",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "stripe-event-types": "^3.1.0",
    "supertest": "^7.0.0",
    "swaggerhub-cli": "^0.9.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "type-fest": "^4.26.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.0",
    "vite": "^5.4.3",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^1.6.0",
    "vitest-github-actions-reporter": "^0.11.1"
  },
  "overrides": {
    "@nx/eslint-plugin": {
      "@typescript-eslint/parser": {
        "eslint": "$eslint"
      }
    },
    "@serverless-guru/prettier-plugin-import-order": {
      "prettier": "$prettier"
    },
    "eslint-import-resolver-typescript": {
      "eslint": "$eslint"
    },
    "swaggerhub-cli": {
      "@oclif/plugin-plugins": ">=5",
      "ip": ">=2.0.1"
    }
  }
}
