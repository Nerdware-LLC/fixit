{
  "name": "fixit-api",
  "version": "1.18.0",
  "description": "Fixit API services built on NodeJS and Apollo GraphQL.",
  "author": {
    "name": "Trevor Anderson",
    "email": "Trevor@Nerdware.cloud"
  },
  "license": "LicenseRef-LICENSE",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nerdware-LLC/fixit-api.git"
  },
  "private": true,
  "homepage": "https://github.com/Nerdware-LLC/fixit-api#readme",
  "bugs": {
    "url": "https://github.com/Nerdware-LLC/fixit-api/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "type": "module",
  "scripts": {
    "start": "npm run ddb:forceNew ; nodemon ./src/index.ts dotenv_config_path=./src/server/.dev.env",
    "start:prod": "node --no-warnings --loader ./build/loader.js ./build/index.js",
    "compose:up": "docker compose --file ./docker/docker-compose.yaml --project-directory . up",
    "build": "rm -rf ./build 2>/dev/null && tsc --project tsconfig.build.json",
    "ddb:start": "docker run -d -p 8000:8000 --rm --name fixit-api-ddb-local amazon/dynamodb-local 1>/dev/null",
    "ddb:kill": "docker container kill fixit-api-ddb-local &>/dev/null",
    "ddb:forceNew": "npm run ddb:kill ; npm run ddb:start",
    "test": "npm run ddb:forceNew ; NODE_OPTIONS='--experimental-vm-modules --no-warnings' DOTENV_CONFIG_PATH=./src/server/.test.env jest",
    "test:watch": "npm run test -- --watch ;        # Re-run tests when associated files change",
    "rover:update-schema": "rover graph introspect http://localhost:8080/api | rover graph publish fixit@current --schema -",
    "rover:fetch": "rover graph fetch fixit@current > fixit@current.graphql",
    "gql:codegen": "graphql-codegen --config codegen.yaml",
    "gql:update-types": "npm run rover:fetch && npm run gql:codegen",
    "gql:update-schema-and-types": "npm run rover:update-schema && npm run gql:update-types"
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@aws-sdk/client-dynamodb": "^3.327.0",
    "@aws-sdk/client-lambda": "^3.327.0",
    "@aws-sdk/lib-dynamodb": "^3.327.0",
    "@sentry/node": "^7.51.0",
    "@sentry/tracing": "^7.51.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "expo-server-sdk": "^3.7.0",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^8.5.1",
    "lodash.merge": "^4.6.2",
    "module-alias": "^2.2.2",
    "moment": "^2.29.4",
    "stripe": "^10.7.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@apollo/rover": "^0.14.0",
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/introspection": "^3.0.1",
    "@graphql-codegen/typescript": "^3.0.4",
    "@graphql-codegen/typescript-resolvers": "^3.2.1",
    "@jest/types": "^29.5.0",
    "@serverless-guru/prettier-plugin-import-order": "^0.4.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash.merge": "^4.6.7",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.15.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "type-fest": "^3.10.0",
    "typescript": "^5.0.4"
  },
  "_moduleAliases": {
    "@": "build/",
    "@events": "build/events",
    "@graphql": "build/graphql",
    "@lib": "build/lib",
    "@middleware": "build/middleware",
    "@models": "build/models",
    "@server": "build/server",
    "@utils": "build/utils"
  }
}
